{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EventBus": "amqp://localhost"
  },
  "ReverseProxy": {
    "Routes": {
      "Identity": {
        "ClusterId": "Identity",
        "Match": {
          "Path": "/api/Identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "Quote": {
        "ClusterId": "Quote",
        "Match": {
          "Path": "/api/Quote/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "Identity": {
        "Destinations": {
          "Destination1": {
            "Address": "https://deopeia-identity-api"
          }
        }
      },
      "Quote": {
        "Destinations": {
          "Destination1": {
            "Address": "http://deopeia-quote-api"
          }
        }
      }
    }
  }
}
