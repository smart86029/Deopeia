{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EventBus": "amqp://localhost"
  },
  "ReverseProxy": {
    "Routes": {
      "Identity": {
        "ClusterId": "Identity",
        "Match": {
          "Path": "/api/{path:regex(Users|Roles|Permissions)}/{**catch-all}"
        }
      },
      "Quote": {
        "ClusterId": "Quote",
        "Match": {
          "Path": "/api/{path:regex(Exchanges|Options|Industries|Instruments|Stocks)}/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "Identity": {
        "Destinations": {
          "Destination1": {
            "Address": "https://deopeia-identity-api"
          }
        }
      },
      "Quote": {
        "Destinations": {
          "Destination1": {
            "Address": "http://deopeia-quote-api"
          }
        }
      }
    }
  }
}
