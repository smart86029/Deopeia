  <ItemGroup>
    <ProjectReference Include="..\..\Common\Deopeia.Common.Api\Deopeia.Common.Api.csproj" />
    <ProjectReference Include="..\..\Deopeia.ServiceDefaults\Deopeia.ServiceDefaults.csproj" />
    <ProjectReference Include="..\Deopeia.Identity.Application\Deopeia.Identity.Application.csproj" />
    <ProjectReference Include="..\Deopeia.Identity.Infrastructure\Deopeia.Identity.Infrastructure.csproj" />
  </ItemGroup>

</Project>
